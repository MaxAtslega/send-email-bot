{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowJs": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "pretty": true,
    "outDir": "dist",
    "sourceMap": true
  },
  "include":[ "src/**/*"],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
